@model IEnumerable<FinalProject12.Models.Movie>

@{
    ViewData["Title"] = "Home";
}

<h1 class="main-heading">Welcome to Main Street Movies!</h1>

<!-- Bootstrap CSS included directly if not in _Layout.cshtml -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<style>
    .main-heading {
        font-size: 36px; /* Adjust the font size as needed */
        color: #DCEDF8; /* Set the text color */
        background-color: #000080; /* Replace with your desired color */
        text-align: center; /* Center the text horizontally */
        text-transform: uppercase; /* Convert text to uppercase */
        font-weight: bold; /* Set font weight to bold */
        margin-bottom: 20px; /* Add margin at the bottom for spacing */
        text-shadow: 2px 2px 4px rgba(0, 0, 255, 0.5); /* Deep blue text shadow */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        margin-top: 20px;
    }

    .main-container {
        background-color: #DCEDF8; /* Replace with your desired color */
        max-width: 1600px; /* Adjust the maximum width as needed */
        margin: 20px auto; /* Center the container horizontally and add margin at the top */
        padding: 20px; /* Add padding around the container */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        border: 3px solid #000080;
    }

    .carousel-item {
        position: relative; /* Needed for absolute positioning of the caption */
    }

        .carousel-item img {
            max-height: 400px; /* Set a fixed height for all movie images */
            margin: 0 auto; /* Center the image */
            margin-left: 60px;
        }

    .carousel-caption {
        position: absolute; /* Position caption absolutely within carousel-item */
        bottom: 0; /* Align at the bottom */
        right: 60px; /* Align at the right */
        background-color: rgba(0,0,0,0.5); /* Semi-transparent background for readability */
        color: white;
        text-align: center;
        padding: 40px;
        left: 50%; /* Shift the caption to the right */
        transform: translateX(-45%); /* Center the caption with respect to its width */
        max-width: 80%; /* Prevents caption from becoming too wide */
        margin-right: 40px; /* Add space between image and caption */
    }

    .links {
        margin-top: 20px; /* Add space above the links */
    }


    /* Define styles for the subheading class */
    .subheading {
        color: #000080; /* Set text color to white */
        text-align: center; /* Center-align the text */
        font-weight: bold; /* Make the text bold */
        margin-bottom: 20px; /* Add margin at the bottom to create spacing */
        /* Add any other CSS styles you desire */
    }
</style>


<div class="main-container">

    <!-- Add the subheading "Featured Movies" with formatting -->
    <h2 class="subheading">Featured Movies</h2>

    <div id="movieCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <!-- Carousel item for 'Fast and Furious 18: Anger Management' -->
            <div class="carousel-item active">
                <img src="@Url.Content("~/images/movieposters/fast_and_furious_18_anger_management.jpg")" alt="Fast and Furious 18: Anger Management">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Fast and Furious 18: Anger Management</h5>
                    <p>They may be riding mechanical scooters, but they are as furious as ever as they attend court-ordered therapy.</p>
                </div>
            </div>

            <!-- Carousel item for 'Barbie' -->
            <div class="carousel-item">
                <img src="@Url.Content("~/images/movieposters/barbie.jpg")" alt="Barbie">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Barbie</h5>
                    <p>Stereotypical Barbie experiences a full on existential crisis and embarks on a journey of self discovery. Along for the ride is her beau Ken.</p>
                </div>
            </div>

            <!-- Carousel item for 'The Sandlot' -->
            <div class="carousel-item">
                <img src="@Url.Content("~/images/movieposters/the_sandlot.jpg")" alt="The Sandlot">
                <div class="carousel-caption d-none d-md-block">
                    <h5>The Sandlot</h5>
                    <p>
                        When Scottie Smalls moves to a new neighborhood, he manages to make friends with a group of kids who play baseball at the sandlot.

                    </p>
                </div>
            </div>

            <!-- Carousel item for 'The Sandlot' -->
            <div class="carousel-item">
                <img src="@Url.Content("~/images/movieposters/lord_of_the_rings_two_towers.jpg")" alt="Lord of The Rings: Two Towers">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Lord of The Rings: Two Towers</h5>
                    <p>Frodo and Sam discover they are being followed by the mysterious Gollum.</p>
                </div>
            </div>


            <!-- Carousel item for 'The Sandlot' -->
            <div class="carousel-item">
                <img src="@Url.Content("~/images/movieposters/titanic.jpg")" alt="The Titanic">
                <div class="carousel-caption d-none d-md-block">
                    <h5>The Titanic</h5>
                    <p>An epic, action-packed romance set against the ill-fated maiden voyage of the R.M.S. Titanic.</p>
                </div>
            </div>


            <!-- Carousel item for 'The Sandlot' -->
            <div class="carousel-item">
                <img src="@Url.Content("~/images/movieposters/toy_story_7.jpg")" alt="Toy Story 7">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Toy Story 7</h5>
                    <p>
                        Woody and Buzz team up once again to lead the resistance in the Toy Revolt.

                    </p>
                </div>
            </div>

            <!-- Add additional carousel items here for other movies -->
        </div>

        <a class="carousel-control-prev" href="#movieCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#movieCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="links">
        <a asp-action="Index" asp-controller="Reviews" class="btn btn-primary">View Reviews</a>

        @if (User.Identity.IsAuthenticated)
        {
            <a asp-action="Index" asp-controller="Transactions" class="btn btn-info">Ticket Transactions</a>
            if (User.IsInRole("Admin"))
            {
                <a asp-action="Index" asp-controller="Departments" class="btn btn-danger">View Departments</a>
                <a asp-action="Index" asp-controller="RoleAdmin" class="btn btn-warning">Manage Users</a>
            }
        }
    </div>
</div>

<!-- Bootstrap JS and its dependencies included directly if not in _Layout.cshtml -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
